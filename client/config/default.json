{
  "_comment": "이 파일을 config.json으로 복사하여 사용하세요",
  "_description": "로컬 개발 환경에 맞게 설정을 수정할 수 있습니다",
  
  "server": {
    "host": "localhost",
    "port": 9999,
    "timeout_ms": 5000,
    "reconnect_attempts": 3,
    "reconnect_interval_ms": 2000
  },
  "client": {
    "window": {
      "width": 1400,
      "height": 900,
      "min_width": 1000,
      "min_height": 700
    },
    "game_board": {
      "cell_size": 25,
      "grid_line_width": 1,
      "animation_duration_ms": 300
    },
    "ui": {
      "theme": "default",
      "language": "ko",
      "font_size": 12,
      "auto_save_interval_ms": 30000
    }
  },
  "debug": {
    "enable_console_logs": true,
    "log_level": "DEBUG",
    "log_network_messages": true,
    "show_fps": true,
    "enable_debug_overlay": true
  },
  "audio": {
    "master_volume": 1.0,
    "sfx_volume": 0.8,
    "music_volume": 0.6,
    "mute_on_focus_loss": false
  }
}