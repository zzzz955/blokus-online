<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
  <domain-config cleartextTrafficPermitted="true">
    <domain includeSubdomains="true">blokus-online.mooo.com</domain>
    <domain includeSubdomains="true">localhost</domain>
  </domain-config>
  
  <!-- 비표준 포트 허용 (8080: API, 9000: OIDC) -->
  <domain-config cleartextTrafficPermitted="true">
    <domain includeSubdomains="true">blokus-online.mooo.com:8080</domain>
    <domain includeSubdomains="true">blokus-online.mooo.com:9000</domain>
  </domain-config>
</network-security-config>