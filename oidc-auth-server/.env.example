# OIDC Server Configuration
NODE_ENV=development
PORT=9000
LOG_LEVEL=info

# OIDC Issuer Configuration
OIDC_ISSUER=http://localhost:9000
OIDC_BASE_URL=http://localhost:9000

# Token Lifetimes (슬라이딩 윈도우: 30일 + 최대 90일)
ACCESS_TOKEN_LIFETIME=10m
REFRESH_TOKEN_LIFETIME=30d
REFRESH_TOKEN_MAX_LIFETIME=90d
AUTH_CODE_LIFETIME=10m

# Database Configuration (shared with other services)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blokus_online
DB_USER=admin
DB_PASSWORD=admin
DB_POOL_MIN=2
DB_POOL_MAX=10

# Client Secrets (for confidential clients)
WEB_CLIENT_SECRET=web-client-secret-change-in-production

# Admin Configuration
ADMIN_TOKEN=admin-token-change-in-production

# Production URLs (when NODE_ENV=production)
WEB_REGISTER_URL_PROD=https://blokus-online.mooo.com/register
WEB_REGISTER_URL_DEV=http://localhost:3000/register